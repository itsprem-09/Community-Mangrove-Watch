# ===========================================
# MANGROVE WATCH BACKEND CONFIGURATION
# ===========================================

# ===========================================
# SERVER CONFIGURATION
# ===========================================
# Express Backend
PORT=5000
EXPRESS_BACKEND_PORT=5000
NODE_ENV=development

# Python Backend
PYTHON_BACKEND_PORT=8000
PYTHON_BACKEND_URL=http://localhost:8000

# Application URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# For local MongoDB
MONGODB_URI=mongodb://localhost:27017/mangrove_watch
# For MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/mangrove_watch
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=mangrove_watch

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_SECRET_KEY=your_super_secret_jwt_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=7d
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ===========================================
# CLOUDINARY CONFIGURATION
# ===========================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# Email service provider (gmail, outlook, yahoo, etc.)
EMAIL_SERVICE=gmail

# Email credentials for sending notifications
EMAIL_USER=notifications@mangrove-watch.org
EMAIL_PASS=your-app-password-here

# Admin email recipients
ADMIN_EMAIL=admin@mangrove-watch.org

# Application URL for email links
ADMIN_URL=https://mangrove-watch.org

# ===========================================
# API KEYS
# ===========================================
GEMINI_API_KEY=your_gemini_api_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ===========================================
# GOOGLE EARTH ENGINE CONFIGURATION
# ===========================================
GEE_PROJECT_ID=your_gee_project_id
GEE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project"}

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# ADMIN CONFIGURATION
# ===========================================
ADMIN_PASSWORD=change_in_production

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
